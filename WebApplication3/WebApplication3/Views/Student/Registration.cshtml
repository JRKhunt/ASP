@model WebApplication3.Models.Student
@{
    ViewBag.Title = "Registration";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header text-center" style="background-color: #ff6f61; color: white;">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="card-body" style="background-color: #f7f7f7;">
                    @using (Html.BeginForm("Registration", "Student", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="mb-4 row">
                            @Html.LabelFor(m => m.fname, new { @class = "col-sm-3 col-form-label text-primary" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.fname, new { @class = "form-control border-primary", placeholder = "Enter First Name", style = "background-color: #eaf4fc;" })
                            </div>
                        </div>
                        <br />
                        <div class="mb-4 row">
                            @Html.LabelFor(m => m.lname, new { @class = "col-sm-3 col-form-label text-primary" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.lname, new { @class = "form-control border-primary", placeholder = "Enter Last Name", style = "background-color: #eaf4fc;" })
                            </div>
                        </div>
                        <br />
                        <div class="text-center">
                            <input type="submit" value="Submit" name="submit" class="btn" style="background-color: #ff6f61; color: white; width: 50%;" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
